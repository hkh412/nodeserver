body {
    font-family: 'Nanum Gothic', serif;
}

.sub-header {
    font: normal 20px 'Nanum Gothic', serif;
}

.navbar-form {
    margin-top: 0;
}

.search-box {
    display: inline-block;
    width: auto;
    vertical-align: bottom;
}

.dropdown-title {
    margin-right: 3px;
}
.dropdown-frame {
    overflow: auto;
    min-width: 100px;
    max-height: 250px;
}

